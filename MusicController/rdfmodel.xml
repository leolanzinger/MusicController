<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:ex="http://imi.org/">
    
    <!-- Input Modality -->

	<rdf:Description rdf:about="InputModality">
		<rdf:type rdf:resource="Modality" />
	</rdf:Description>

	
	<rdf:Description rdf:about="Touch">
		<rdf:type rdf:resource="InputModality" />
		<rdf:hasActivity rdf:resource="VolumeUp" />
        <rdf:hasActivity rdf:resource="VolumeDown" />
        <rdf:hasActivity rdf:resource="NextSong" />
        <rdf:hasActivity rdf:resource="PreviousSong" />
        <rdf:hasActivity rdf:resource="Play" />
        <rdf:hasActivity rdf:resource="Stop" />
		<rdf:hasLocation rdf:resource="NotInHand" />
		<rdf:hasPhoneMode rdf:resource="NormalMode" />
	</rdf:Description>

	<rdf:Description rdf:about="AccGesture">
		<rdf:type rdf:resource="InputModality" />
        <rdf:hasActivity rdf:resource="VolumeUp" />
        <rdf:hasActivity rdf:resource="VolumeDown" />
        <rdf:hasActivity rdf:resource="NextSong" />
        <rdf:hasActivity rdf:resource="PreviousSong" />
        <rdf:hasActivity rdf:resource="Play" />
        <rdf:hasActivity rdf:resource="Stop" />
		<rdf:hasLocation rdf:resource="InHand" />
		<rdf:hasPhoneMode rdf:resource="BlindMode" />
	</rdf:Description>
    

<!-- Output Modality -->

	<rdf:Description rdf:about="OutputModality">
		<rdf:type rdf:resource="Modality" />
	</rdf:Description>



	<rdf:Description rdf:about="AudioChange">
		<rdf:type rdf:resource="OutputModality" />
        <rdf:hasActivity rdf:resource="VolumeUp" />
        <rdf:hasActivity rdf:resource="VolumeDown" />
        <rdf:hasActivity rdf:resource="NextSong" />
        <rdf:hasActivity rdf:resource="PreviousSong" />
        <rdf:hasActivity rdf:resource="Play" />
        <rdf:hasActivity rdf:resource="Stop" />
        <rdf:hasLocation rdf:resource="InHand" />
        <rdf:hasLocation rdf:resource="NotInHand" />
		<rdf:hasPhoneMode rdf:resource="BlindMode" />
        <rdf:hasPhoneMode rdf:resource="NormalMode" />

	</rdf:Description>

	<rdf:Description rdf:about="Visual">
		<rdf:type rdf:resource="OutputModality" />
        <rdf:hasActivity rdf:resource="VolumeUp" />
        <rdf:hasActivity rdf:resource="VolumeDown" />
        <rdf:hasActivity rdf:resource="NextSong" />
        <rdf:hasActivity rdf:resource="PreviousSong" />
        <rdf:hasActivity rdf:resource="Play" />
        <rdf:hasActivity rdf:resource="Stop" />
        <rdf:hasLocation rdf:resource="NotInHand" />
        <rdf:hasPhoneMode rdf:resource="NormalMode" />
	</rdf:Description>


	<rdf:Description rdf:about="Speech">
        <rdf:type rdf:resource="OutputModality" />
        <rdf:hasActivity rdf:resource="VolumeUp" />
        <rdf:hasActivity rdf:resource="VolumeDown" />
        <rdf:hasActivity rdf:resource="NextSong" />
        <rdf:hasActivity rdf:resource="PreviousSong" />
        <rdf:hasActivity rdf:resource="Play" />
        <rdf:hasActivity rdf:resource="Stop" />
        <rdf:hasLocation rdf:resource="InHand" />
        <rdf:hasPhoneMode rdf:resource="BlindMode" />
	</rdf:Description>


	<rdf:Description rdf:about="BlindMode">
		<rdf:type rdf:resource="PhoneMode" />
        <rdf:LocationIs rdf:resource="InHand" />
	</rdf:Description>

	<rdf:Description rdf:about="NormalMode">
		<rdf:type rdf:resource="PhoneMode" />
        <rdf:LocationIs rdf:resource="NotInHand" />
	</rdf:Description>

	<rdf:Description rdf:about="InHand">
		<rdf:type rdf:resource="Location" />
	</rdf:Description>

	<rdf:Description rdf:about="NotInHand">
		<rdf:type rdf:resource="Location" />
	</rdf:Description>
	
	<rdf:Description rdf:about="VolumeUp">
		<rdf:type rdf:resource="Activity" />
	</rdf:Description>
    
    <rdf:Description rdf:about="VolumeDown">
        <rdf:type rdf:resource="Activity" />
    </rdf:Description>
    
    <rdf:Description rdf:about="NextSong">
        <rdf:type rdf:resource="Activity" />
    </rdf:Description>
    
    <rdf:Description rdf:about="PreviousSong">
        <rdf:type rdf:resource="Activity" />
    </rdf:Description>
    
    <rdf:Description rdf:about="Play">
        <rdf:type rdf:resource="Activity" />
    </rdf:Description>
	
	<rdf:Description rdf:about="Stop">
		<rdf:type rdf:resource="Activity" />
	</rdf:Description>
</rdf:RDF>