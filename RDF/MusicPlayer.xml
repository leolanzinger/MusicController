<?xml version="1.0"?>

<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#" xml:base="http://musicController/">

	<!-- Output modalities -->
	<rdf:Description rdf:ID="OutputModalities">
	</rdf:Description>

	<rdf:Description rdf:ID="Audio">
		<rdfs:subClassOf rdf:resource="#OutputModalities"/>
	</rdf:Description>

	<rdf:Description rdf:ID="Visual">
		<rdfs:subClassOf rdf:resource="#OutputModalities"/>
	</rdf:Description>

	<rdf:Description rdf:ID="Vibration">
		<rdfs:subClassOf rdf:resource="#OutputModalities"/>
	</rdf:Description>

	<!-- Input modalities -->
	<rdf:Description rdf:ID="InputModalities">
	</rdf:Description>

	<rdf:Description rdf:ID="WiiGesture">
		<rdfs:subClassOf rdf:resource="#InputModalities"/>
	</rdf:Description>

	<rdf:Description rdf:ID="AirGesture">
		<rdfs:subClassOf rdf:resource="#InputModalities"/>
	</rdf:Description>

	<!-- Music feedback -->
	<rdf:Description rdf:ID="StopMusicFeedback">
	</rdf:Description>

	<rdf:Description rdf:ID="PlayMusicFeedback">
	</rdf:Description>

	<rdf:Description rdf:ID="ForwardMusicFeedback">
	</rdf:Description>

	<rdf:Description rdf:ID="BackwardMusicFeedback">
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeUpFeedback">
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeDownFeedback">
	</rdf:Description>

	<!-- Actions -->
	<rdf:Description rdf:ID="Action">
	</rdf:Description>

	<rdf:Description rdf:ID="StopMusicAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#StopMusicFeedback"/>
	</rdf:Description>

	<rdf:Description rdf:ID="PlayMusicAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#PlayMusicFeedback"/>
	</rdf:Description>

	<rdf:Description rdf:ID="ForwardMusicAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#ForwardMusicFeedback"/>
	</rdf:Description>

	<rdf:Description rdf:ID="BackwardMusicAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#BackwardMusicFeedback"/>
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeUpAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#VolumeUpFeedback"/>
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeDownAction">
		<rdfs:subClassOf rdf:resource="#Action"/>
		<rdfs:triggers rdf:resource="#VolumeDownFeedback"/>
	</rdf:Description>

	<!-- Gestures -->
	<!-- Stop Music Gesture -->
	<rdf:Description rdf:ID="StopMusicAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#StopMusicAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="StopMusicWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#StopMusicAction"/>
	</rdf:Description>

	<!-- Play Music Gesture -->
	<rdf:Description rdf:ID="PlayMusicAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#PlayMusicAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="PlayMusicWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#PlayMusicAction"/>
	</rdf:Description>

	<!-- Forward Music Gesture -->
	<rdf:Description rdf:ID="ForwardMusicAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#ForwardMusicAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="ForwardMusicWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#ForwardMusicAction"/>
	</rdf:Description>

	<!-- Backward Music Gesture -->
	<rdf:Description rdf:ID="BackwardMusicAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#BackwardMusicAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="BackwardMusicWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#BackwardMusicAction"/>
	</rdf:Description>

	<!-- Volume Up Gesture -->
	<rdf:Description rdf:ID="VolumeUpAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#VolumeUpAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeUpWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#VolumeUpAction"/>
	</rdf:Description>

	<!-- Volume Down Gesture -->
	<rdf:Description rdf:ID="VolumeDownAirGesture">
		<rdfs:typeOf rdf:resource="#AirGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#VolumeDownAction"/>
	</rdf:Description>

	<rdf:Description rdf:ID="VolumeDownWiiGesture">
		<rdfs:typeOf rdf:resource="#WiiGesture"/>
		<rdfs:RDFtypeOf rdf:resource="#VolumeDownAction"/>
	</rdf:Description>
	
</rdf:RDF>